---
import Base from "../layout/Base.astro";
const title = "Register";
---

<Base title={title}>
  <main class="flex-1 flex flex-col gap-4 items-center p-4 justify-center">
    <section class="w-full max-w-md">
      <p class="text-zinc-500 dark:text-zinc-300 text-sm mb-8 w-full">
        Вы уже имеете аккаунт? <a
          href="/signin"
          class="dark:text-blue-500 text-blue-600 underline underline-offset-2 font-medium"
          >Войти</a
        >
      </p>
      <form
        action="/api/auth/register"
        method="post"
        class="grid grid-cols-1 gap-3 w-full"
      >
        <div class="grid grid-cols-1 gap-2">
          <label
            for="email"
            class="block text-sm font-medium leading-6 dark:text-white text-gray-900"
            >Email</label
          >
          <input
            id="email"
            type="email"
            name="email"
            class="w-full block focus:dark:bg-zinc-800 rounded-md py-1.5 px-3 dark:bg-zinc-900 dark:border-zinc-600 border bg-zinc-50 border-zinc-300 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:bg-white focus:ring-opacity-60 leading-6"
          />
        </div>
        <div class="grid grid-cols-1 gap-2">
          <label
            for="password"
            class="block text-sm font-medium leading-6 text-gray-900 dark:text-white"
            >Пороль</label
          >
          <input
            id="password"
            type="password"
            name="password"
            class="w-full block focus:dark:bg-zinc-800 rounded-md py-1.5 px-3 dark:bg-zinc-900 dark:border-zinc-600 border bg-zinc-50 border-zinc-300 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:bg-white focus:ring-opacity-60 leading-6"
          />
        </div>

        <button
          type="submit"
          class="h-9 rounded-md px-3 w-full mt-4 focus:outline-none disabled:opacity-50 disabled:cursor-not-allowed bg-black dark:text-black text-white dark:bg-zinc-50"
          >Зарегистрироваться</button
        >
      </form>
    </section>
  </main>
</Base>
